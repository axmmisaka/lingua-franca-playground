{
    "image": "mcr.microsoft.com/devcontainers/universal:2-focal",
    "hostRequirements": {
      "cpus": 1
    },
    // Uncomment this line if GitHub displays no enough space
    // "initializeCommand": "docker system prune --all --force",
    "waitFor": "postCreateCommand",
    "onCreateCommand": "bash ./.scripts/setup-env.bash",
    "updateContentCommand": "",
    "postCreateCommand": {
      "setup-lf": "bash -i ./.scripts/setup-user-env.bash && bash ./.scripts/setup-lf.bash nightly",
      "setup-examples": "git clone https://github.com/lf-lang/examples-lingua-franca.git examples --branch main" 
    }, 
    "workspaceFolder": "/workspaces/lingua-franca-playground",
    "remoteEnv": {
        // Unsure if this is a good idea, as other people might fork this and change name
        "LF_PATH": "${containerWorkspaceFolder}/lingua-franca",
        "PATH": "${containerEnv:PATH}:${containerWorkspaceFolder}/lingua-franca/bin"
    },
    "customizations": {
      "codespaces": {
        "openFiles": []
      },
      "vscode": {
        "extensions": [
          "lf-lang.vscode-lingua-franca"
        ]
      }
    }
  }
